<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="once.boardQA.dao.BoardQADAO">
  
 	<!-- t_board의 view_cnt, reg_date mapping -->
 	<resultMap type="BoardQAVO" id="MapBoardVO">
 		<result column="view_cnt" property="viewCnt"/>
 		<result column="reg_date" property="regDate" />
 	</resultMap>
 	
 	<sql id="selectAll">
 		select no, title, writer, content, view_cnt,
 		       to_char(reg_date, 'yyyy-mm-dd') as reg_date
 		  from t_board
 	</sql>
 
 	<!-- 전체 게시글 조회  -->
 	<select id="selectAllBoard" resultMap="MapBoardVO">
 		<include refid="selectAll" />
 		 order by no desc
 	</select>
 	
 	<!-- 새글 등록  -->
 	<insert id="insertBoard" parameterType="BoardQAVO">
 		insert into t_board(no, title, writer, content)
 		 values(seq_t_board_no.nextval, #{title}, #{writer}, #{content})
 	</insert>
 	
 	<!-- 글번호 조회 -->
 	<select id="selectOneBoard" resultMap="MapBoardVO" parameterType="int">
 		<include refid="selectAll" />
 		where no = #{no}
 	</select>
 	
 	<!-- 글 수정 -->
 	<update id="modifyBoard" parameterType="BoardQAVO">
 		update t_board
 		set title=#{title},writer=#{writer},content=#{content}
 		where no = #{no}
 	</update>
 	
 	<!-- 글 삭제 -->
 	<delete id="deleteBoard" parameterType="int">
 		delete from t_board where no = #{no}
 	</delete>
 	
</mapper>







